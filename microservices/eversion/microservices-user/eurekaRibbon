FROM centos
MAINTAINER dnnlyqai<dnnlyqai@163.com>

RUN yum -y install vim

ENV MYPATH /usr/local/

WORKDIR $MYPATH

ADD jdk-8u211-linux-x64.tar.gz $MYPATH
COPY microservices-user-0.0.1-SNAPSHOT.jar $MYPATH
COPY application.properties $MYPATH

ENV JAVA_HOME /usr/local/jdk1.8.0_211
ENV CLASSPATH $JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar
ENV PATH $PATH:$JAVA_HOME/bin

EXPOSE 10812

CMD java -jar /usr/local/microservices-user-0.0.1-SNAPSHOT.jar
